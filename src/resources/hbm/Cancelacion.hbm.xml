<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="entidades.Cancelacion" table="cancelacion">
      <id name="id" column="id_cancelacion">
          <generator class="increment" />
      </id>
      <property name="fechaCancelacion"  column="fecha_cancelacion" type="java.util.Date" />
      <property name="valorDiaPendiente"  column="valor_dia_pendiente"  />
      <property name="cantidadDias"  column="cantidad_dias"  />

  </class>
</hibernate-mapping>
